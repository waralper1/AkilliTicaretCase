@page
@model LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>HTML5 Login Form with validation Example</title>
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">*@
    <style>
        #account-wrap {
            width: 35%;
            position: center;
            max-width:100%;
            margin: 0 auto;
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            font-family: Arial, sans-serif;
        }

            #account-wrap h2 {
                font-size: 24px;
                text-align: center;
                margin-bottom: 20px;
                color: #333;
            }

        #account {
            margin: 0 auto;
            width: 80%;
        }

            #account p {
                margin-bottom: 20px;
            }

            #account input[type="email"],
            #account input[type="password"] {
                display: block;
                width: 100%;
                height: 40px;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 16px;
                color: #333;
                box-sizing: border-box;
            }

            #account input[type="checkbox"] {
                display: none;
            }

        .checkbox-label {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .checkbox-label .checkbox-icon {
                display: inline-block;
                width: 20px;
                height: 20px;
                border: 1px solid #ccc;
                border-radius: 4px;
                margin-right: 10px;
            }

                .checkbox-label .checkbox-icon:after {
                    content: "";
                    display: inline-block;
                    width: 10px;
                    height: 10px;
                    background-color: #fff;
                    border-radius: 2px;
                    position: relative;
                    top: -3px;
                    left: 3px;
                    visibility: hidden;
                }

            .checkbox-label input[type="checkbox"]:checked + .checkbox-icon:after {
                visibility: visible;
            }

            .checkbox-label .checkbox-label-text {
                font-size: 16px;
                color: #333;
            }

        #login {
            display: block;
            width: 100%;
            height: 40px;
            margin-bottom: 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            #login:hover {
                background-color: #0062cc;
            }
            /* Mobil Ekranlar */
        @@media only screen and (max-width: 748px) {
              body {
                margin: 0;
                padding: 0;
              }

            #account-wrap {
                width: 45%;
                max-width:100%;
                margin: 0 auto;
                background-color: #f9f9f9;
                border: 1px solid #ccc;
                padding: 20px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                font-family: Arial, sans-serif;
            }
       
              #account {
                width: 100%;
                max-width: 100%;
              }
              .checkbox-label {
                display: flex;
                justify-content: space-between;
                align-items: center;
              }
            }

        
            </style>

</head>
<body>
    <!-- partial:index.partial.html -->
    <div id="account-wrap">
        <h2>Login</h2>
        <form method="post" id="account">
            <div asp-validation-summary="ModelOnly" class="validation" role="alert"></div>
            <p>
                <input aria-required="true" class="form-control" asp-for="Input.Email" autocomplete="username" type="email" id="username" placeholder="Kullanıcı Adı" required>
                @*<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />*@
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </p>
            <p>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" type="password" id="email" placeholder="Şifre" required>
                @*<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />*@
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </p>
            <p>
                
                <div class="checkbox-label">
                    <input type="checkbox" id="remember-me-checkbox" class="form-check-input" asp-for="Input.RememberMe" />
                    <label for="remember-me-checkbox" class="checkbox-icon"></label>
                    <span class="checkbox-label-text">Beni Hatırla</span>
                </div>


            </p>
            <p>
                <div class="checkbox-label">
                <input type="submit" id="login" value="Giriş">
                <input type="submit" class="btn btn-success" id="login" value="Üyelik Başvuru Formu">
                </div>
            </p>
        </form>
        <div id="footer-wrap">
            <p><a href="https://akilliticaret.com/">© 2022 Demo B2B</a> | 0555 555 55 55 | info@akilliticaret.com <p>
        </div><!--create-account-wrap-->
    </div><!--account-wrap-->
    <!-- partial -->

</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</html>


